                            <input class="form-control textarea" type="text" id="mensaje" placeholder="Type here!"/>
                            <div class="send-button">
                                <button class="btn btn-primary btn-fill" id="send">Send</button>
                            </div>
                        </div>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
