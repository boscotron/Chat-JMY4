                        <h4 class="card-title">Chat</h4>
                        <p class="category">Con Treisi Mishel</p>
                    </div>
                    <div class="card-content scroll-perso" >
                        <ol class="chat " > 
                            <li class="other">
                                <div class="avatar XD">
                                    <img src="{{head.cdn}}assets/img/favicon.png" alt="crash"/>
                                </div>
                                <div class="msg">
                                    <p>
                                        Como estas?
                                    </p>
                                    <div class="card-footer">
                                        <i class="ti-check"></i>
                                        <h6>11:20</h6>
                                    </div>
                                </div>
                            </li>                           
                            <li class="self">
                                <div class="msg">
                                    <p>
